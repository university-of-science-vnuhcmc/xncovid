@{ 
    ViewBag.Title = "Tạo mã QR";
}
<div class="centered-dialog justify-centered">

    @using (Html.BeginForm("GenerateCode", "QRCodeGenerator", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <h4>Nhập số lượng mã QR cần dùng</h4>
        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
        <div class="form-group">
            <div class="col-md-10 h-align-center mt-3">
                <input type="number" name="QRCodeAmount" min="1" max="10000" class="form-control text-center" required />
            </div>
        </div>
        <h6 style="margin: 20px auto">Lưu ý: chỉ tạo tối đa <span style="color:red">10000</span> mã một lần</h6>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 h-align-center">
                <input type="submit" class="btn btn-submit" value="Tạo mã" />
            </div>
        </div>
    }

</div>