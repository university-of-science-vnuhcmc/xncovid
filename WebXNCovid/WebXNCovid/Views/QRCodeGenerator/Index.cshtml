
<div class="row">
    <div class="input-dialog">

        @using (Html.BeginForm("GenerateCode", "QRCodeGenerator", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <h4>Nhập số lượng mã QR cần dùng</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10 h-align-center">
                    <input type="text" name="QRCodeAmount" min="1" max="10000" class="form-control center-text-align" required />                    
                </div>
            </div>
            <h6 style="margin: 20px auto">Lưu ý: chỉ tạo tối đa <span style="color:red">10000</span> mã một lần</h6>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 h-align-center">
                    <input type="submit" class="btn btn-custom" value="Tạo mã" />
                </div>
            </div>
        }

    </div>
</div>