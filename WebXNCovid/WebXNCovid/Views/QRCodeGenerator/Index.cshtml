@{
    ViewBag.Title = "Generate QR Code";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Generate", "QRCodeGenerator", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @*@Html.AntiForgeryToken()*@
    <h4>Nhập số lượng QR Code muốn tạo</h4>
    <hr />
    @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
    <div class="form-group">
        <label class="col-md-2 control-label" >Số lượng QR Code tạo</label>
        @*@Html.LabelFor(m => m.QRCodeAmount, new { @class = "col-md-2 control-label" })*@
        <div class="col-md-10">
            <input type="text" name="QRCodeAmount" class="form-control"/>
            @*@Html.TextBoxFor(m => m.QRCodeAmount, new { @class = "form-control" })*@
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}

