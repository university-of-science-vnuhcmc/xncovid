@using PagedList.Mvc
@model  PagedList.IPagedList<byte[]>
@{
    ViewBag.Title = "Preview QR Code";
}

<h2>@ViewBag.Title</h2>

@if (Model.Count > 0)
{
    using (Html.BeginForm())
    {
        <div class="row">
            @for (int i = 0; i < Model.Count; i++)
            {
                <img src="@String.Format("data:image/jpeg;base64,{0}", Convert.ToBase64String(Model[i]))" />
            }
        </div>

        <div id="container" style="margin-left: 20px">
            <p></p>
            <p></p>
            <div class="pagination" style="margin-left: 400px">
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("PreviewQRCode", new { page }))
            </div>
        </div>
    }
}