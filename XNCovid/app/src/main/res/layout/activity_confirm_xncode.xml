<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmXNCodeActivity"
    android:background="#DCD6D8D6"
    android:id="@+id/layout_staff_main"
    >

    <TextView
        android:id="@+id/txt_profress_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Tạo nhóm xét nghiệm"
        android:textAppearance="@style/black_28"
        android:gravity="center_horizontal|top"
        android:background="@drawable/rectangle_title_bar"
        />
    <!-- Mã xét nghiệm -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="72dp"
        android:text="Mã xét nghiệm"
        android:textAppearance="@style/black_24"
        android:gravity="top|center"
        />
    <!-- Covid19_ABC123 -->
    <TextView
        android:id="@+id/txt_xn_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35.51dp"
        android:layout_marginRight="35.51dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="112.29dp"
        android:text="U07T26200501"
        android:textStyle="bold"
        android:textAppearance="@style/blue_42"
        android:gravity="center"
        android:background="@drawable/rectangle_8"
        />
    <!-- Số lượng gộp người/mẫu -->
    <TextView
        android:id="@+id/txt_max_group"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="72dp"
        android:text="Số lượng người/mẫu"
        android:textAppearance="@style/black_24"
        android:gravity="top|center"
        android:layout_below="@+id/txt_xn_code"
        />
    <EditText android:id="@+id/input_max_group"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:inputType="number"
        android:text="10"
        android:textAppearance="@style/black_30"
        android:textStyle="bold"
        android:layout_below="@+id/txt_max_group"
        android:background="@drawable/rectangle_name_session"/>

    <CheckBox
        android:layout_below="@+id/input_max_group"
        android:id="@+id/checkbox_id"
        android:text="Chọn làm số mặc định"
        android:checked="false"
        android:layout_marginTop="17dp"
        android:textStyle="bold"
        android:textAppearance="@style/black_24"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!-- Xác nhận ! -->
    <Button
        android:id="@+id/btnxncode_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/x_c_nh_n_"
        android:textAppearance="@style/white_24"
        android:background="@drawable/ractangle_1"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="62dp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20sp"
        />
</RelativeLayout>