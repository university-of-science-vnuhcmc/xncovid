<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rectangle_2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/ic_dialog"
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_warnning"
            android:layout_marginLeft="31dp"
            android:layout_centerVertical="true"/>
        <!-- Xác nhận thoát khỏi phiên xét nghiệm -->
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="31dp"
            android:layout_marginTop="13dp"
            android:text="Xác nhận thoát khỏi phiên xét nghiệm"
            android:textAppearance="@style/black_24"
            android:gravity="center_horizontal|top"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ic_dialog"/>
    </RelativeLayout>

    <!-- XN_Covid19_HCM_123 -->
    <TextView
        android:id="@+id/dialog_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="31dp"
        android:paddingRight="31dp"
        android:layout_marginTop="10dp"
        android:text="@string/xn_covid19_"
        android:textAppearance="@style/red_20"
        android:gravity="center_horizontal|top"
        />
    <!-- Điều này sẽ được thông báo đến trưởng nhóm Nguyễn Văn A ! -->
    <TextView
        android:id="@+id/content_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:paddingTop="10dp"
        android:text="Điều này sẽ được thông báo đến trưởng nhóm Nguyễn Văn A !"
        android:textAppearance="@style/black_18"
        android:gravity="top"
        />

</LinearLayout >