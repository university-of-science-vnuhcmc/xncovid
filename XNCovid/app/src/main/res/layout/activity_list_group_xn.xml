<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListGroupXnActivity"
    android:orientation="vertical"
    android:background="#DCD6D8D6">
    <!--Full Screen Progress Layout-->
    <include
        android:id="@+id/my_loading_layout"
        layout="@layout/my_loading_layout" />
    <RelativeLayout
        android:id="@+id/relative_top"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:background="@drawable/rectangle_3"
        >
        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/frag_xncode">
            <!-- Mã xét nghiệm: Covid19_ABC123 -->
            <TextView
                android:id="@+id/label_xncode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_xncode"
                android:textAppearance="@style/black_20"
                android:gravity="top"
                android:lineSpacingExtra="7sp"
                android:translationY="-3.28sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_xncode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="U07T26200501"
                android:textAppearance="@style/black_20"
               android:layout_below="@+id/label_xncode"
                android:lineSpacingExtra="7sp"
                android:translationY="-3.28sp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_toRightOf="@+id/frag_xncode"
            android:layout_alignParentRight="true">
            <!-- Mã xét nghiệm: Covid19_ABC123 -->
            <TextView
                android:id="@+id/label_count_xn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_count_group"
                android:textAppearance="@style/black_20"
                android:gravity="top|right"
                android:lineSpacingExtra="7sp"
                android:translationY="-3.28sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1/10"
                android:gravity="center"
                android:textAppearance="@style/red_20"
                android:layout_below="@+id/label_count_xn"
                android:lineSpacingExtra="7sp"
                android:translationY="-3.28sp"
                android:textStyle="bold"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_below="@+id/relative_top"
        android:layout_above="@+id/btn_confirm_new_group">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:gravity="left"
            android:paddingLeft="17dp"
            android:id="@+id/relative_ds_sum">
            <!-- Danh sách xét nghiệm: (0/10) -->
            <TextView
                android:id="@+id/label_ds_xn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Danh sách gộp mẫu:"
                android:textAppearance="@style/black_20"
                android:gravity="top|left"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:minHeight="10dp"
            android:id="@+id/layout_listview"
            android:orientation="vertical"
            android:layout_above="@+id/lst_xn_users"
            android:layout_below="@+id/relative_ds_sum">
            <ListView
                android:id="@+id/list_ds_xn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/rectangle_11"
            android:gravity="center_vertical"
            android:id="@+id/lst_xn_users"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">
            <View
                android:id="@+id/ic_scan_qr"
                android:layout_width="44.31dp"
                android:layout_height="45.6dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_scan"
                android:layout_marginLeft="37dp"/>
            <TextView
                android:id="@+id/qu_t_th_m_"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/ic_scan_qr"
                android:text="+ Quét để thêm ..."
                android:textAppearance="@style/black_18"
                android:gravity="center"
                />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/btn_confirm_new_group"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout android:id="@+id/startGroupDisable"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:clickable="false"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:background="@drawable/slide_green_button_disable">
            <View
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:background="@drawable/right_green_arrow_disable"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Trượt để hoàn tất gộp mẫu"/>
        </LinearLayout>
        <SeekBar android:background="@drawable/slide_button_group"
            android:visibility="gone"
            android:layout_margin="20dp"
            android:id="@+id/startGroup"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="false"
            android:max="100"
            android:thumb="@drawable/right_green_arrow"
            android:thumbOffset="18dp"
            android:progressDrawable="@drawable/slide_green_progess"
            android:layout_alignParentBottom="true"
            >
        </SeekBar>
    </LinearLayout>
</RelativeLayout>