<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hcdc.xncovid">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_appicon_xncovid"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_appicon_xncovid"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.XNCovid.NoActionBar">
        <activity android:name=".ListGroupXnActivity"></activity>
        <activity android:name=".ConfirmXNCodeActivity" />
        <activity android:name=".ScanSessionActivity" />
        <activity android:name=".QRSessionActivity" />
        <activity
            android:name=".SessionInfoActivity"
            android:label="@string/title_activity_session_info"
            android:theme="@style/Theme.XNCovid.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateSessionActivity" />
        <activity android:name=".ConfirmSessionActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainStaffActivity" />
        <activity android:name=".MainLeaderActivity" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.hcdc.xncovid.fileprovider"
            android:grantUriPermissions="true"
            android:exported="false">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>
    </application>

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>